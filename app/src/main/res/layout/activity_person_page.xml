<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="code.com.movie_based_app.activities.PersonPageActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/b"
        android:scaleType="fitStart"/>
    <ImageView
        android:id="@+id/back"
        android:onClick="back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/per_face"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:siBorderColor="@color/white"
        app:siBorderWidth="3dp"
        android:src="@drawable/face"
        android:layout_marginTop="138dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_below="@+id/per_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="王振宁"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/main_black"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/user_content"
        android:layout_below="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一个爱做梦的现实主义青年"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/main_gray"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/f_moudle"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/user_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_below="@+id/user_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获赞"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="43"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/user_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="被反对"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/user_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="被分享"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/user_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="被收藏"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/f_moudle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:paddingTop="8dp">
        <code.com.movie_based_app.widgets.SettingLayout
            android:id="@+id/set_layout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="none"/>
    </ScrollView>
</RelativeLayout>
